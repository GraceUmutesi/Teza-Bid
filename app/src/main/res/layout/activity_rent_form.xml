<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentFormActivity">
    <ImageView
        android:id="@+id/img"
        android:src="@drawable/oonee"
        android:layout_width="177dp"
        android:layout_height="300dp" />
    <ImageView
        android:id="@+id/img1"
        android:src="@drawable/bat"
        android:layout_toRightOf="@+id/img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="8dp"

        />
    <ImageView
        android:id="@+id/img2"
        android:src="@drawable/bed"
        android:layout_below="@+id/img"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-120dp"
       />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="15dp"
        android:text="The house has 3 main rooms, 1 bathroom, 1 kitchen, a beautiful living room and a garden.If interested contact us on:terabid@gmail.com"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <Button
        android:id="@+id/but"
        android:layout_below="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Connect"
        android:textColor="@android:color/black"/>
</RelativeLayout>