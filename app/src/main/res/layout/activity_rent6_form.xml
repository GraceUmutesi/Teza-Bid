<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rent6FormActivity">
    <ImageView
        android:id="@+id/img4"
        android:src="@drawable/ra2"
        android:layout_width="177dp"
        android:layout_height="300dp" />

    <ImageView
        android:id="@+id/img5"
        android:src="@drawable/ra3"
        android:layout_toRightOf="@+id/img4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="8dp"

        />
    <ImageView
        android:id="@+id/img6"
        android:src="@drawable/ra1"
        android:layout_below="@+id/img4"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-150dp"
        />

    <TextView
        android:id="@+id/desci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img4"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="15dp"
        android:text="A Velar RangerRover with 6 seats"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <Button
        android:id="@+id/butt"
        android:layout_below="@+id/desci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Get Connected"
        android:textColor="@android:color/black"/>
</RelativeLayout>