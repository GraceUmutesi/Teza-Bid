<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rent5FormActivity">
    <ImageView
        android:id="@+id/img"
        android:src="@drawable/livi"
        android:layout_width="177dp"
        android:layout_height="300dp" />
    <ImageView
        android:id="@+id/img1"
        android:src="@drawable/beedi"
        android:layout_toRightOf="@+id/img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="8dp"

        />
    <ImageView
        android:id="@+id/img2"
        android:src="@drawable/batth"
        android:layout_below="@+id/img"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-150dp"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="15dp"
        android:text="The house has 4 rooms, 1 bathroom, 1 kitchen and beautiful living room ."
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <Button
        android:id="@+id/but"
        android:layout_below="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Mail us"
        android:textColor="@android:color/black"/>
</RelativeLayout>