<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentActivity"
    android:background="@drawable/money"
    android:scaleType="centerCrop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/methods"
        android:textAlignment="center"
        android:fontFamily="@font/amarante"
        android:text="Choose your mode of payment"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/methods"
        android:layout_width="match_parent"
        android:layout_height="509dp"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/mtn"
            android:layout_width="300dp"
            android:layout_height="99dp"
            android:layout_margin="20dp"
            android:src="@drawable/mtn1"
            android:background="@drawable/payments"/>

        <ImageButton
            android:id="@+id/airteltigo"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:src="@drawable/airteltigo"
            android:background="@drawable/payments"/>




    </RadioGroup>




</LinearLayout>